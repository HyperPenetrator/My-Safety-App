rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user is accessing their own data
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Users Collection Rule
    // ONLY the user themselves can read or write their own profile
    match /users/{userId} {
      allow read, write: if isOwner(userId);
      
      // Strict validation for creation/updates (Anti-Leak measure)
      allow create: if isOwner(userId) && request.resource.data.keys().hasAll(['email', 'createdAt']);
    }

    // Default deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
